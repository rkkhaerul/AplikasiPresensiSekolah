<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_width="match_parent"
        android:gravity="left|center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/btnTahunAjaran">

        <LinearLayout
            android:layout_marginBottom="2dp"
            android:padding="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txKelasGet"
                    android:gravity="left|center_vertical"
                    android:textColor="#3E3B3B"
                    android:textSize="6pt"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Kelas 10/X (Sepuluh)"/>

                <TextView
                    android:id="@+id/txDeskripsiKelasGet"
                    android:gravity="left|center_vertical"
                    android:textColor="#A79797"
                    android:textSize="5pt"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tingkat SMK Kelas Pertama"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="right"
                android:layout_weight="30"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtKelasShow"
                    android:text="10"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="11pt"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>